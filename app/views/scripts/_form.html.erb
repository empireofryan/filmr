<%= form_for @script do |f| %>

  <%= f.label "Title" %>
  <%= f.text_field :title %><br><br>
  <%= f.label "Logline" %>
  <%= f.text_field :logline %><br><br>
  <div class="field"><%= f.label :genre_id %><br>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %></div><br>
  <%= f.fields_for :comments, @script.comments.build do |script_fields| %>
    <%= script_fields.label "Comments" %>
    <div class="help-block">Write a review</div>
    <%= script_fields.text_field :description, hide_label: true %>
  <% end %>

  <div class="actions"><%= f.submit class: "btn btn-primary" %></div>

<% end %>


